<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natburgwyn.hangman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/HangmanAppTheme" 
        android:name=".HangmanApplication">
        <activity
            android:name="com.natburgwyn.hangman.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.natburgwyn.hangman.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.natburgwyn.hangman.HangmanPreferencesActivity"
            android:label="@string/title_activity_hangman_preferences" >
        </activity>
        <activity
            android:name="com.natburgwyn.hangman.StatisticsActivity"
            android:label="@string/title_activity_statistics" >
        </activity>
    </application>

</manifest>